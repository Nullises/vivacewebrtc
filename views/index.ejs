<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>OpenTok Hello World</title>
    <link rel="stylesheet" href="angular-material/angular-material.min.css">
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic">
    <script src="//static.opentok.com/webrtc/v2.2/js/TB.min.js"></script>
    <script type="text/javascript">
        var apiKey = '<%= apiKey %>';
        var sessionId = '<%= sessionId %>';
        var token = '<%= token %>';
    </script>

    <script src="/js/sessionHandler.js"></script>

</head>
<body ng-app="mainView" layout="column" ng-controller="sidenavController">

    <md-toolbar layout="row">
      <md-button class="menu" ng-click="openLeftMenu()" hide-gt-sm>
        <md-icon>
          <i class="fa fa-bars" aria-hidden="true" style="font-size:18pt"></i>
        </md-icon>
      </md-button>
      <h3>VIVACE WEBRTC (TEST)</h3>
    </md-toolbar>

    <!--CONTENEDOR PRINCIPAL-->
    <div class="container" layout="row" flex>


      <!--SIDENAV-->
      <md-sidenav md-is-locked-open="$mdMedia('gt-sm')" class="md-sidenav-left md-whiteframe-10dp" md-component-id="left">

        <md-toolbar class="md-primary">
          <h1 class="md-toolbar-tools">USUARIOS CONECTADOS</h1>
        </md-toolbar>

        <md-list>
          <md-list-item>
            <md-button class="md-primary">
              <md-icon><i class="fa fa-user-md" aria-hidden="true" style="font-size:18pt"></i></md-icon>
              RUBEN DU√çN
            </md-button>
          </md-list-item>
          <md-list-item>
            <md-button class="md-primary">
              <md-icon><i class="fa fa-user" aria-hidden="true" style="font-size:18pt"></i></md-icon>
              ULISES VARGAS
            </md-button>
          </md-list-item>
        </md-list>

      </md-sidenav>

      <md-content id="content" flex>
        <!--OPENTOK-->
        <div layout="column" layout-gt-xs="row">
          <md-card flex layout-align="center center">
            <div id="publisher"></div>
          </md-card>
          <md-card flex flex-gt-xs="30" layout-align="center center">
            <div id="subscribers"></div>
          </md-card>
        </div>
      </md-content>

    </div>

    <script src="angular/angular.min.js"></script>
    <script src="angular-animate/angular-animate.min.js"></script>
    <script src="angular-aria/angular-aria.min.js"></script>
    <script src="angular-material/angular-material.min.js"></script>
    <script src="/js/angular-scripts/mainModule.js"></script>
    <script src="/js/angular-scripts/sidenavController.js"></script>
</body>
</html>
